
# Ensure Node.js handles the API
RewriteEngine On
RewriteBase /

# 1. Skip rewrite for the API path
RewriteCond %{REQUEST_URI} ^/admission-api [NC]
RewriteRule .* - [L]

# 2. Skip rewrite for existing files/folders (images, js, css, installer.html)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3. SPA routing: Send everything else to index.html
RewriteRule ^ index.html [L]
