
RewriteEngine On
RewriteBase /

# 1. Allow access to physical files (CSS, JS, Images, Installer)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. Specifically ensure API routes are NOT handled as files/folders
# This helps Hostinger's Node.js proxy catch these specific paths
RewriteRule ^(api-v1|api-status) - [L]

# 3. SPA Routing: Map all other requests to index.html
RewriteRule ^ index.html [L]
