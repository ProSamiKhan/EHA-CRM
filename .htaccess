
RewriteEngine On
RewriteBase /

# 1. Direct access to installer and other static files
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. Map all non-file requests to index.html (SPA)
# Hostinger's Node.js proxy will catch the /api-v1 routes if configured.
RewriteRule ^ index.html [L]
