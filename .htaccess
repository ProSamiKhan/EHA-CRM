
RewriteEngine On
RewriteBase /

# 1. If it's a real file or directory, serve it directly (for JS/CSS/Images in build)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. Redirect EVERYTHING else to the Node.js app.
# Note: On some Hostinger plans, the proxying is automatic if 'server.js' is started.
# But this rule helps ensure the SPA routes work correctly.
RewriteRule ^(.*)$ index.html [L]
